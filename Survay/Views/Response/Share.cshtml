<style>
    .survey-share {
        max-width: 500px;
        margin: 20px auto;
        text-align: center;
    }

    .survey-link-box {
        display: flex;
        margin-top: 10px;
        border: 1px solid #ddd;
        border-radius: 6px;
        overflow: hidden;
    }

    #surveyLink {
        flex: 1;
        padding: 10px;
        border: none;
        font-size: 14px;
        background: #f8f9fa;
    }

    .copy-btn {
        padding: 10px 15px;
        background: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        font-size: 14px;
    }

        .copy-btn:hover {
            background: #0069d9;
        }

    .copied {
        background: #28a745 !important;
    }
</style>

<div class="survey-share">
    <h4>Share this survey</h4>
    <div class="survey-link-box">
        <input type="text" id="surveyLink" value="@ViewBag.SurveyUrl" readonly>
        <button class="copy-btn" onclick="copyLink()">Copy</button>
    </div>
</div>

<script>
    function copyLink() {
        const input = document.getElementById("surveyLink");
        const btn = document.querySelector(".copy-btn");

        input.select();
        document.execCommand("copy");

        btn.textContent = "Copied!";
        btn.classList.add("copied");

        setTimeout(() => {
            btn.textContent = "Copy";
            btn.classList.remove("copied");
        }, 2000);
    }
</script>