@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Choose a starting point</h1>
</div>

<div class="buttons-container">
    <button class="custom-button" type="button" onclick="location.href='@Url.Action("Create", "Survey")'">
        <div class="icon-container"></div>
        <header class="button-header">Start from scratch</header>
        <div class="button-body">Begin with a blank survey or form. Then add your questions, text, and images.</div>
    </button>

    <button class="custom-button" type="button" onclick="location.href='@Url.Action("Surevys", "Survey")'">
        <div class="icon-container"></div>
        <header class="button-header">Show your Surveys</header>
        <div class="button-body">Edit and Analyze your Surveys</div>
    </button>
</div>

<style>
    .buttons-container {
        display: flex;
        justify-content: center;
        gap: 20px; 
        margin-top: 20px; 
    }

    .custom-button {
        padding: 15px;
        color: rgb(51, 62, 72);
        width: 300px;
        border: 2px solid transparent;
        height: auto;
        display: inline-flex;
        padding: 24px;
        overflow: hidden;
        font-size: 16px;
        box-shadow: rgb(237, 238, 238) 0px 0px 0px 2px;
        transition: border-color 0.2s, box-shadow 0.2s;
        align-items: center;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        border-radius: 24px;
        flex-direction: column;
        text-decoration: none;
        cursor: pointer;
        background-color: rgb(255, 255, 255);
    }

        .custom-button:hover {
            border-color: #00BF6F;
            box-shadow: 0px 0px 10px rgba(0, 191, 111, 0.5);
        }

    .button-header {
        font-weight: bold;
        font-size: 18px;
    }

    .button-body {
        font-size: 14px;
        color: rgb(100, 100, 100);
    }
</style>
